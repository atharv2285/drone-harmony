{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/index.ts",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 60
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/health",
            "dest": "/server/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "functions": {
        "server/index.ts": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}